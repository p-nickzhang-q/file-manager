{
  "name": "file-tag-zy",
  "version": "0.0.1",
  "main": "electron/main.js",
  "scripts": {
    "electron:dev": "concurrently -k \"npm run dev\" \"npm run electron\"",
    "electron:build": "vite build && electron-builder",
    "electron": "wait-on tcp:3001 && cross-env NODE_ENV=development electron .",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview"
  },
  "build": {
    "directories": {
      "output": "build-electron"
    },
    "files": [
      "dist",
      "./electron/**/*",
      "!node_modules/asar/**/*"
    ],
    "win": {
      "icon": "./favicon_256.ico"
    },
    "nsis": {
      "include": "scripts/installer.nsi",
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": false,
      "oneClick": false,
      "menuCategory": false,
      "perMachine": true,
      "warningsAsErrors": false
    }
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "文件标签助手"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "file_tag_electron"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "@element-plus/icons-vue": "^0.2.4",
    "element-plus": "^2.2.17",
    "vue": "^3.2.37",
    "zhangyida-tools": "0.0.36"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^3.1.0",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "electron": "^21.1.1",
    "electron-builder": "^23.6.0",
    "sass": "^1.48.0",
    "typescript": "^4.6.4",
    "unplugin-auto-import": "^0.11.2",
    "unplugin-vue-components": "^0.22.7",
    "vite": "^3.1.0",
    "vue-tsc": "^0.40.4",
    "wait-on": "^6.0.1"
  }
}
